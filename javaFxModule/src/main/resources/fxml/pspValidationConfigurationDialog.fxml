<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox fx:id="container" alignment="CENTER" minHeight="300" minWidth="650" spacing="20"
      xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="nkp.pspValidator.gui.PspValidationConfigurationDialogController">
    <!--    fx:controller="nkp.pspValidator.gui.MainController"-->
    <!--stylesheets="/css/main.css"-->


    <children>

        <GridPane alignment="CENTER" hgap="10" vgap="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="20"/>
            </padding>

            <!--PSP dir-->
            <Label text="Adresář PSP balíku"
                   GridPane.columnIndex="0"
                   GridPane.rowIndex="0"
                   GridPane.columnSpan="2"
            />
            <TextField fx:id="pspDirTextField" minWidth="350"
                       GridPane.columnIndex="2"
                       GridPane.rowIndex="0"
                       GridPane.columnSpan="1"
                       GridPane.hgrow="ALWAYS"
            />
            <Button onAction="#selectPspDir" text="Vybrat" GridPane.columnIndex="3" GridPane.rowIndex="0"/>

            <Label text="Vynutit použití konkrétních verzí standardů" GridPane.columnIndex="0" GridPane.columnSpan="3"
                   GridPane.rowIndex="2"/>

            <!--forced Monograph version-->
            <CheckBox fx:id="monVersionForcedCheckBox"
                      onAction="#monVersionForcedChanged"
                      GridPane.columnIndex="0"
                      GridPane.rowIndex="3"/>

            <Label text="Monografie" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

            <ChoiceBox fx:id="monVersionChoiceBox"
                       GridPane.columnIndex="2"
                       GridPane.rowIndex="3"/>

            <!--forced Periodical version-->
            <CheckBox fx:id="perVersionForcedCheckBox"
                      onAction="#perVersionForcedChanged"
                      GridPane.columnIndex="0"
                      GridPane.rowIndex="4"/>

            <Label text="Periodika" GridPane.columnIndex="1" GridPane.rowIndex="4"/>

            <ChoiceBox fx:id="perVersionChoiceBox" GridPane.columnIndex="2" GridPane.columnSpan="2"
                       GridPane.rowIndex="4"/>


        </GridPane>

        <HBox alignment="CENTER">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10"/>
            </padding>
            <Label fx:id="errorMessageLabel" text="" textFill="#f80202"/>
        </HBox>

        <HBox alignment="CENTER" spacing="10">
            <padding>
                <Insets bottom="5" left="10" right="10" top="5"/>
            </padding>
            <Button onAction="#validate" text="Validovat"/>
            <Button onAction="#closeDialog" text="Zavřít"/>
        </HBox>

    </children>
</VBox>
