<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox
        xmlns="http://javafx.com/javafx/8.0.161"
        xmlns:fx="http://javafx.com/fxml/1"
        stylesheets="/css/exclusions/exclusionsConfigurationDialog.css"
        fx:controller="nkp.pspValidator.gui.exclusions.ExclusionsConfigurationDialogController"
        fx:id="container"
        alignment="TOP_CENTER"
        spacing="0">

    <padding>
        <Insets bottom="10" left="10" right="10" top="10"/>
    </padding>

    <children>

        <TabPane fx:id="tabPane"
                 prefHeight="750"
        />

        <HBox
                alignment="BOTTOM_CENTER" spacing="10">
            <padding>
                <Insets bottom="5" left="10" right="10" top="5"/>
            </padding>
            <Button onAction="#closeDialog"
                    text="Zavřít"/>
            <Button fx:id="btnSave"
                    onAction="#saveData"
                    disable="true"
                    text="Uložit"/>

        </HBox>

    </children>
</VBox>
