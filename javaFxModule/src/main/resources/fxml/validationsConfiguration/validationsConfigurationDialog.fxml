<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<VBox fx:id="container" alignment="CENTER_LEFT" minHeight="400" minWidth="700" spacing="0"
      stylesheets="/css/validationsConfiguration/validationsConfigurationDialog.css"
      xmlns="http://javafx.com/javafx/8.0.161"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="nkp.pspValidator.gui.validationsConfiguration.ValidationsConfigurationDialogController">

    <padding>
        <Insets bottom="10" left="10" right="10" top="20"/>
    </padding>

    <children>

        <Text fx:id="titleText"
              wrappingWidth="400"
              styleClass="title"
              text="Monografie 1.2"/>
        <ListView fx:id="sectionList"
                  prefHeight="200.0"
                  prefWidth="200.0"
                  minWidth="300"/>

        <HBox alignment="CENTER" spacing="10">
            <padding>
                <Insets bottom="5" left="10" right="10" top="5"/>
            </padding>
            <Button onAction="#closeDialog"
                    text="Zavřít"/>
            <Button fx:id="btnSave"
                    onAction="#saveData"
                    disable="true"
                    text="Uložit"/>

        </HBox>

    </children>
</VBox>
