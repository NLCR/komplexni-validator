<jpeg2000profile>
    <fromXml>
        <namespaces>
            <namespace prefix="j">http://openpreservation.org/ns/jpylyzer/</namespace>
        </namespaces>

        <validation name="File name">
            <xmlDataExtraction resultType="STRING">
                <firstNonempty>
                    <xpath>//j:fileInfo/j:fileName</xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
            </rules>
        </validation>

        <validation name="Last modified">
            <xmlDataExtraction resultType="STRING">
                <firstNonempty>
                    <xpath>//j:fileInfo/j:fileLastModified</xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
            </rules>
        </validation>

        <validation name="Size">
            <xmlDataExtraction resultType="STRING">
                <firstNonempty>
                    <xpath>//j:fileInfo/j:fileSizeInBytes</xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
            </rules>
        </validation>

        <validation name="Tool name">
            <xmlDataExtraction resultType="STRING">
                <firstNonempty>
                    <xpath>//j:fileInfo/j:toolName</xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
            </rules>
        </validation>

        <validation name="Tool version">
            <xmlDataExtraction resultType="STRING">
                <firstNonempty>
                    <xpath>//j:fileInfo/j:toolVersion</xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
            </rules>
        </validation>

        <validation name="Valid">
            <xmlDataExtraction resultType="STRING">
                <firstNonempty>
                    <!--tohle se lisi mezi verzemi jpylyzer, prvni je ze specifikace, druhy je z realneho vystupu pro jpylyzer 1.17.0-->
                    <xpath>//j:statusInfo/j:isValidJP2</xpath>
                    <xpath>//j:statusInfo/j:success</xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
                <mustMatch>
                    <constant>True</constant>
                </mustMatch>
            </rules>
        </validation>

        <validation name="Height">
            <xmlDataExtraction resultType="STRING">
                <firstNonempty>
                    <xpath>//j:properties/j:jp2HeaderBox/j:imageHeaderBox/j:height</xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
            </rules>
        </validation>

        <validation name="Width">
            <xmlDataExtraction resultType="STRING">
                <firstNonempty>
                    <xpath>//j:properties/j:jp2HeaderBox/j:imageHeaderBox/j:width</xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
            </rules>
        </validation>

        <validation name="Počet barevných komponent">
            <xmlDataExtraction resultType="STRING">
                <firstNonempty>
                    <xpath>//j:properties/j:jp2HeaderBox/j:imageHeaderBox/j:nC</xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
                <!--povolene hodnoty "1" nebo "3"-->
                <mustMatchOne>
                    <constant>1</constant>
                    <constant>3</constant>
                </mustMatchOne>
            </rules>
        </validation>

        <validation name="Barevná hloubka">
            <xmlDataExtraction resultType="STRING">
                <firstNonempty>
                    <xpath>//j:properties/j:contiguousCodestreamBox/j:siz/j:ssizDepth</xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
                <mustMatchOne>
                    <constant>8</constant>
                </mustMatchOne>
            </rules>
        </validation>

        <validation name="Color space (1)">
            <xmlDataExtraction resultType="STRING">
                <firstNonempty>
                    <xpath>//j:properties/j:jp2HeaderBox/j:colourSpecificationBox/j:enumCS</xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
                <!--povolene hodnoty "sRGB" nebo "greyscale"-->
                <mustMatchOne>
                    <constant>sRGB</constant>
                    <constant>greyscale</constant>
                </mustMatchOne>
            </rules>
        </validation>

        <validation name="Color space (2)">
            <xmlDataExtraction resultType="STRING">
                <firstNonempty>
                    <xpath>//j:properties/j:jp2HeaderBox/j:colourSpecificationBox/j:meth</xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
                <mustMatchOne>
                    <constant>Restricted ICC</constant>
                </mustMatchOne>
            </rules>
        </validation>

        <validation name="Rozlišení vertik.">
            <xmlDataExtraction resultType="FLOAT">
                <!--muze se nachazet na nekolika mistech, pouzije se prvni dostupna hodnota-->
                <firstNonempty>
                    <xpath>//j:properties/j:jp2HeaderBox/j:resolutionBox/j:captureResolutionBox/j:vRescInPixelsPerMeter
                    </xpath>
                    <xpath>//j:properties/j:jp2HeaderBox/j:resolutionBox/j:displayResolutionBox/j:vResdInPixelsPerMeter
                    </xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
                <!--rozsah hodnot, zde realná čísla-->
                <mustMatch>
                    <floatRange>
                        <min>11732.0</min>
                    </floatRange>
                </mustMatch>
            </rules>
        </validation>

        <validation name="Rozlišení horiz.">
            <xmlDataExtraction resultType="FLOAT">
                <firstNonempty>
                    <xpath>//j:properties/j:jp2HeaderBox/j:resolutionBox/j:captureResolutionBox/j:hResdInPixelsPerMeter
                    </xpath>
                    <xpath>//j:properties/j:jp2HeaderBox/j:resolutionBox/j:displayResolutionBox/j:hResdInPixelsPerMeter
                    </xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
                <mustMatch>
                    <floatRange>
                        <min>11810.0</min>
                        <max>11812.0</max>
                    </floatRange>
                </mustMatch>
            </rules>
        </validation>

        <validation name="Počet dlaždic">
            <xmlDataExtraction resultType="INTEGER">
                <firstNonempty>
                    <xpath>//j:properties/j:contiguousCodestreamBox/j:siz/j:numberOfTiles</xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
                <!--jakékoliv přirozené číslo-->
                <mustMatch>
                    <intRange>
                        <min>1</min>
                        <!--maximum nedefinovano, tedy nekonecno-->
                    </intRange>
                </mustMatch>
            </rules>
        </validation>

        <validation name="Velikost dlaždic (1)">
            <xmlDataExtraction resultType="INTEGER">
                <firstNonempty>
                    <xpath>//j:properties/j:contiguousCodestreamBox/j:siz/j:xTsiz</xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
                <mustMatch>
                    <constant>4096</constant>
                </mustMatch>
            </rules>
        </validation>

        <validation name="Velikost dlaždic (2)">
            <xmlDataExtraction resultType="INTEGER">
                <firstNonempty>
                    <xpath>//j:properties/j:contiguousCodestreamBox/j:siz/j:yTsiz</xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
                <mustMatch>
                    <constant>4096</constant>
                </mustMatch>
            </rules>
        </validation>

        <validation name="Precints (regiony)">
            <xmlDataExtraction resultType="STRING">
                <firstNonempty>
                    <xpath>//j:properties/j:contiguousCodestreamBox/j:cod/j:precincts</xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
                <mustMatch>
                    <constant>Yes</constant>
                </mustMatch>
            </rules>
        </validation>

        <validation name="Velikost precints (1)">
            <xmlDataExtraction resultType="STRING_LIST">
                <firstNonempty>
                    <xpath>//j:properties/j:contiguousCodestreamBox/j:cod/j:precintSizeX</xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
                <!--2krát hodnota 256; zbylé hodnoty 128-->
                <mustMatch>
                    <nTimesXRemainingY>
                        <n>2</n>
                        <x>256</x>
                        <y>128</y>
                    </nTimesXRemainingY>
                </mustMatch>
            </rules>
        </validation>

        <validation name="Velikost precints (2)">
            <xmlDataExtraction resultType="STRING_LIST">
                <firstNonempty>
                    <xpath>//j:properties/j:contiguousCodestreamBox/j:cod/j:precintSizeY</xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
                <!--2krát hodnota 256; zbylé hodnoty 128-->
                <mustMatch>
                    <nTimesXRemainingY>
                        <n>2</n>
                        <x>256</x>
                        <y>128</y>
                    </nTimesXRemainingY>
                </mustMatch>
            </rules>
        </validation>

        <validation name="Sop">
            <xmlDataExtraction resultType="STRING">
                <firstNonempty>
                    <xpath>//j:properties/j:contiguousCodestreamBox/j:cod/j:sop</xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
                <mustMatch>
                    <constant>Yes</constant>
                </mustMatch>
            </rules>
        </validation>

        <validation name="Eph">
            <xmlDataExtraction resultType="STRING">
                <firstNonempty>
                    <xpath>//j:properties/j:contiguousCodestreamBox/j:cod/j:eph</xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
                <mustMatch>
                    <constant>Yes</constant>
                </mustMatch>
            </rules>
        </validation>

        <validation name="Order">
            <xmlDataExtraction resultType="STRING">
                <firstNonempty>
                    <xpath>//j:properties/j:contiguousCodestreamBox/j:cod/j:order</xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
                <mustMatch>
                    <constant>RPCL</constant>
                </mustMatch>
            </rules>
        </validation>

        <validation name="Layers">
            <xmlDataExtraction resultType="STRING">
                <firstNonempty>
                    <xpath>//j:properties/j:contiguousCodestreamBox/j:cod/j:layers</xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
                <mustMatch>
                    <constant>1</constant>
                </mustMatch>
            </rules>
        </validation>

        <validation name="Levels">
            <xmlDataExtraction resultType="STRING">
                <firstNonempty>
                    <xpath>//j:properties/j:contiguousCodestreamBox/j:cod/j:levels</xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
                <mustMatch>
                    <constant>5</constant>
                    <constant>6</constant>
                </mustMatch>
            </rules>
        </validation>

        <validation name="Code block width">
            <xmlDataExtraction resultType="STRING">
                <firstNonempty>
                    <xpath>//j:properties/j:contiguousCodestreamBox/j:cod/j:codeBlockWidth</xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
                <mustMatch>
                    <constant>64</constant>
                </mustMatch>
            </rules>
        </validation>

        <validation name="Code block height">
            <xmlDataExtraction resultType="STRING">
                <firstNonempty>
                    <xpath>//j:properties/j:contiguousCodestreamBox/j:cod/j:codeBlockHeight</xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
                <mustMatch>
                    <constant>64</constant>
                </mustMatch>
            </rules>
        </validation>

        <validation name="Bypass">
            <xmlDataExtraction resultType="STRING">
                <firstNonempty>
                    <xpath>//j:properties/j:contiguousCodestreamBox/j:cod/j:codingBypass</xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
                <mustMatch>
                    <constant>Yes</constant>
                </mustMatch>
            </rules>
        </validation>

        <validation name="Transformace">
            <xmlDataExtraction resultType="STRING">
                <firstNonempty>
                    <xpath>//j:properties/j:contiguousCodestreamBox/j:cod/j:transformation</xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
                <mustMatch>
                    <constant>5-3</constant>
                </mustMatch>
            </rules>
        </validation>

        <validation name="Kompresní poměr">
            <xmlDataExtraction resultType="FLOAT">
                <firstNonempty>
                    <xpath>//j:properties/j:compressionRatio</xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
                <mustMatch>
                    <floatRange>
                        <min>1.5</min>
                        <max>5.0</max>
                    </floatRange>
                </mustMatch>
            </rules>
        </validation>

        <validation name="Migrační sw">
            <xmlDataExtraction resultType="STRING">
                <firstNonempty>
                    <xpath>//j:properties/j:contiguousCodestreamBox/j:com/j:comment</xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
            </rules>
        </validation>

        <validation name="regions_of_interest">
            <xmlDataExtraction resultType="STRING">
                <firstNonempty>
                    <xpath>rgn</xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <!--element se nesmi vyskytovat, jakakoliv hodnota je nepovolena-->
                <mustNotExist/>
            </rules>
        </validation>
    </fromXml>
</jpeg2000profile>