<jpeg2000profile>
    <fromXml>
        <namespaces>
            <!--<defaultNamespace>http://hul.harvard.edu/ois/xml/ns/jhove</defaultNamespace>-->
            <namespace prefix="j">http://hul.harvard.edu/ois/xml/ns/jhove</namespace>
            <namespace prefix="m">http://www.loc.gov/mix/v20</namespace>
        </namespaces>

        <validation name="Last modified">
            <xmlDataExtraction resultType="STRING">
                <firstNonempty>
                    <xpath>//j:repInfo/j:lastModified</xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <!--povolen jakykoliv retezec znaku-->
                <mustExist/>
            </rules>
        </validation>

        <validation name="Size">
            <xmlDataExtraction resultType="STRING">
                <firstNonempty>
                    <xpath>//j:repInfo/j:lastModified</xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
            </rules>
        </validation>

        <validation name="Tool name">
            <xmlDataExtraction resultType="STRING">
                <firstNonempty>
                    <xpath>/j:jhove/@name</xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
                <mustMatch>
                    <constant>Jhove</constant>
                </mustMatch>
            </rules>
        </validation>

        <validation name="Tool version">
            <xmlDataExtraction resultType="STRING">
                <firstNonempty>
                    <xpath>/j:jhove/@release</xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
            </rules>
        </validation>

        <validation name="Identifikace formátu">
            <xmlDataExtraction resultType="STRING">
                <firstNonempty>
                    <xpath>//j:repInfo/j:format</xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
                <mustMatch>
                    <constant>JPEG 2000</constant>
                </mustMatch>
            </rules>
        </validation>

        <validation name="valid">
            <xmlDataExtraction resultType="STRING">
                <firstNonempty>
                    <xpath>//j:repInfo/j:status</xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
                <mustMatch>
                    <constant>Well-Formed and valid</constant>
                </mustMatch>
            </rules>
        </validation>

        <validation name="Height">
            <xmlDataExtraction resultType="STRING">
                <firstNonempty>
                    <xpath>//j:property[j:name='YSize']/j:values/j:value</xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
            </rules>
        </validation>

        <validation name="Width">
            <xmlDataExtraction resultType="STRING">
                <firstNonempty>
                    <xpath>//j:property[j:name='XSize']/j:values/j:value</xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
            </rules>
        </validation>

        <validation name="Počet barevných komponent">
            <xmlDataExtraction resultType="STRING">
                <firstNonempty>
                    <xpath>//j:property[j:name='CSize']/j:values/j:value</xpath>
                    <xpath>//m:ImageColorEncoding/m:samplesPerPixel</xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
                <!--povolene hodnoty "1" nebo "3"-->
                <mustMatchOne>
                    <constant>1</constant>
                    <constant>3</constant>
                </mustMatchOne>
            </rules>
        </validation>

        <validation name="Barevná hloubka">
            <xmlDataExtraction resultType="STRING">
                <firstNonempty>
                    <!--pozor, v datech byva vice dve hodnoty, nebo zadna. vybiram prvni-->
                    <xpath>//m:ImageColorEncoding/m:BitsPerSample/m:bitsPerSampleValue[1]</xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <!--TODO: docasne vyrazeno, vzdy v datech neni a nekdy je tam vice hodnot-->
                <!-- <mustExist/>
                <mustMatchOne>
                    <constant>8</constant>
                </mustMatchOne>-->
            </rules>
        </validation>

        <validation name="Color space (1)">
            <xmlDataExtraction resultType="STRING">
                <firstNonempty>
                    <xpath>//j:property[j:name='EnumCS']/j:values/j:value</xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
                <!--povolene hodnoty "sRGB" nebo "greyscale"-->
                <mustMatchOne>
                    <constant>sRGB</constant>
                    <constant>Greyscale</constant>
                </mustMatchOne>
            </rules>
        </validation>

        <validation name="Color space (2)">
            <xmlDataExtraction resultType="STRING">
                <firstNonempty>
                    <xpath>//j:property[j:name='Method']/j:values/j:value</xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
                <!--TODO: docasne vyrazeno, v realnych datech byva "Enumerated Colorspace"-->
                <!--<mustMatchOne>
                    <constant>Restricted ICC Profile</constant>
                </mustMatchOne>-->
            </rules>
        </validation>

        <validation name="Rozlišení vertik.">
            <xmlDataExtraction resultType="FLOAT">
                <firstNonempty>
                    <xpath>
                        //j:property[j:name='VertResolution']/j:values/j:property[j:name='Numerator']/j:values/value
                    </xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <!--TODO: docasne vyrazeno, v datech se hodnota nenachazi-->
                <!--<mustExist/>
                <mustMatch>
                    <floatRange>
                        <min>11732</min>
                    </floatRange>
                </mustMatch>-->
            </rules>
        </validation>

        <validation name="Rozlišení horiz.">
            <xmlDataExtraction resultType="FLOAT">
                <firstNonempty>
                    <xpath>
                        //j:property[j:name='HorizResolution']/j:values/j:property[j:name='Numerator']/j:values/value
                    </xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <!--TODO: docasne vyrazeno, v datech se hodnota nenachazi-->
                <!--<mustExist/>
                <mustMatch>
                    <floatRange>
                        <min>11732</min>
                    </floatRange>
                </mustMatch>-->
            </rules>
        </validation>

        <validation name="Počet dlaždic">
            <xmlDataExtraction resultType="INTEGER">
                <firstNonempty>
                    <xpath>count(.//j:name[text()='TilePart'])</xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
                <!--jakékoliv přirozené číslo-->
                <mustMatch>
                    <intRange>
                        <min>1</min>
                    </intRange>
                </mustMatch>
            </rules>
        </validation>

        <validation name="Velikost dlaždic (1)">
            <xmlDataExtraction resultType="INTEGER">
                <firstNonempty>
                    <xpath>
                        //j:property[j:name='Codestream']/j:values/j:property[j:name='ImageAndTileSize']/j:values/j:property[j:name='XTSize']/j:values/j:value
                    </xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
                <mustMatch>
                    <constant>1024</constant>
                </mustMatch>
            </rules>
        </validation>

        <validation name="Velikost dlaždic (2)">
            <xmlDataExtraction resultType="INTEGER">
                <firstNonempty>
                    <xpath>
                        //j:property[j:name='Codestream']/j:values/j:property[j:name='ImageAndTileSize']/j:values/j:property[j:name='YTSize']/j:values/j:value
                    </xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
                <mustMatch>
                    <constant>1024</constant>
                </mustMatch>
            </rules>
        </validation>

        <validation name="Order">
            <xmlDataExtraction resultType="STRING">
                <firstNonempty>
                    <xpath>
                        //j:property[j:name='ProgressionOrder']/j:values/j:value
                    </xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
                <mustMatch>
                    <constant>2</constant>
                </mustMatch>
            </rules>
        </validation>

        <validation name="Layers">
            <xmlDataExtraction resultType="STRING">
                <firstNonempty>
                    <xpath>
                        //j:property[j:name='NumberOfLayers']/j:values/j:value
                    </xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
                <mustMatch>
                    <constant>12</constant>
                </mustMatch>
            </rules>
        </validation>

        <validation name="Levels">
            <xmlDataExtraction resultType="STRING">
                <firstNonempty>
                    <xpath>
                        //j:property[j:name='NumberDecompositionLevels']/j:values/j:value
                    </xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
                <mustMatchOne>
                    <constant>5</constant>
                    <constant>6</constant>
                </mustMatchOne>
            </rules>
        </validation>

        <validation name="Code block width">
            <xmlDataExtraction resultType="STRING">
                <firstNonempty>
                    <xpath>
                        //j:property[j:name='CodeBlockWidth']/j:values/j:value
                    </xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
                <mustMatchOne>
                    <constant>4</constant>
                </mustMatchOne>
            </rules>
        </validation>

        <validation name="Code block height">
            <xmlDataExtraction resultType="STRING">
                <firstNonempty>
                    <xpath>
                        //j:property[j:name='CodeBlockHeight']/j:values/j:value
                    </xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
                <mustMatchOne>
                    <constant>4</constant>
                </mustMatchOne>
            </rules>
        </validation>

        <validation name="Transformace">
            <xmlDataExtraction resultType="STRING">
                <firstNonempty>
                    <xpath>
                        //j:property[j:name='Transformation']/j:values/j:value
                    </xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
                <mustMatchOne>
                    <constant>0</constant>
                </mustMatchOne>
            </rules>
        </validation>

        <validation name="Migrační sw">
            <xmlDataExtraction resultType="STRING">
                <firstNonempty>
                    <xpath>
                        //j:property[j:name='Comments']/j:values/j:property[j:name='Comment']/j:values/j:value
                    </xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
            </rules>
        </validation>

    </fromXml>
</jpeg2000profile>