<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<validationTemplate
        xmlns="http://www.nkp.cz/pspValidator/1.2/xmlValidationTemplate"
        name="DC sheetmusic volume (AACR2)"
        validatorVersion="1.3"
        dmf="monograph_1.2"
>
    <info>
        <text>DMF Monografie-1.2 očekává Dublin Core verze 1.1. Dále se zde upřesňují očekávaná metadata pro svazek
            hudebnin pro záznamy zpracované podle katalogizačních pravidel AACR2.
        </text>
        <url description="popis Dublin Core 1.1">http://dublincore.org/documents/dces/</url>
        <url description="XSD pro Dublin Core 1.1">http://www.openarchives.org/OAI/2.0/oai_dc.xsd</url>
    </info>

    <namespaces>
        <namespace prefix="oai_dc">http://www.openarchives.org/OAI/2.0/oai_dc/</namespace>
        <namespace prefix="dc">http://purl.org/dc/elements/1.1/</namespace>
    </namespaces>

    <rootElement name="oai_dc:dc">
        <expectedElements>

            <element name="dc:title"
                     errorMessage="Očekáván povinný element dc:title obsahující název, případně podnázev hudebniny.">
                <expectedContent/>
            </element>

            <element name="dc:description" mandatory="false">
                <expectedContent/>
            </element>

            <element name="dc:creator" errorMessage="Očekáván povinný element dc:creator obsahující jméno, příjmení, atd. autora, resp. název
                    korporace.">
                <expectedContent/>
            </element>

            <element name="dc:type" specification="text() = 'model:sheetmusic'"
                     errorMessage="Očekáván povinný element dc:type obsahující text 'model:sheetmusic'.">
                <expectedContent/>
            </element>

            <element name="dc:coverage" mandatory="false">
                <expectedContent/>
            </element>

            <element name="dc:publisher" mandatory="false">
                <expectedContent/>
            </element>

            <element name="dc:date" mandatory="true"
                     errorMessage="Očekáván povinný element dc:date obsahující datum vydání předlohy.">
                <expectedContent/>
            </element>

        </expectedElements>
    </rootElement>
</validationTemplate>

	