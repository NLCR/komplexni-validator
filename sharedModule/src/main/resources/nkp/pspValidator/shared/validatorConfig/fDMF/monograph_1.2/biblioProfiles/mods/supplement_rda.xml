                </expectedAttributes>
                <expectedElements>
                    <element name="mods:place" mandatory="false">
                        <expectedElements>
                            <element name="mods:placeTerm" mandatory="false">
                                <expectedAttributes>
                                    <attribute name="type">
                                        <expectedContent>
                                            <oneOf>
                                                <value>code</value>
                                                <value>text</value>
                                            </oneOf>
                                        </expectedContent>
                                    </attribute>

                                    <attribute name="authority" mandatory="false">
                                        <expectedContent>
                                            <value>marccountry</value>
                                        </expectedContent>
                                    </attribute>
                                </expectedAttributes>
                                <expectedContent/>
                            </element>
