                    <element name="mods:name" mandatory="false">
                        <expectedElements>
                            <element name="mods:namePart" mandatory="false">
                                <expectedContent/>
                            </element>
                        </expectedElements>
                    </element>
                </expectedElements>
            </element>

            <element name="mods:classification" specification="not(@edition)" mandatory="false">
                <!--Mezinarodni desetinne trideni-->
                <expectedAttributes>
                    <!--NOTE: DMF neuvadi, jestli je authority povinny atribut, nechavam nepovinny. Povolena hodnota Konspekt, aby prošel element s tímto atributem bez atributu edition-->
                    <attribute name="authority" mandatory="true">
                        <recommendedContent>
                            <oneOf>
                                <value>udc</value>
                                <value>Konspekt</value>
                            </oneOf>
                        </recommendedContent>
                    </attribute>
                </expectedAttributes>
                <expectedContent/>
            </element>

            <element name="mods:classification" specification="boolean(@edition)" mandatory="false">
                <!--Klasifikační údaje věcného třídění podle Konspektu-->
                <expectedAttributes>
                    <attribute name="authority">
                        <recommendedContent>
                            <oneOf>
                                <value>udc</value>
                                <value>Konspekt</value>
                            </oneOf>
                        </recommendedContent>
                    </attribute>

                    <attribute name="edition">
                        <expectedContent>
                            <!--hodnota "Konspekt" je zde nejspíš jen doporučená-->
                        </expectedContent>
                    </attribute>
                </expectedAttributes>
                <expectedContent/>
            </element>


