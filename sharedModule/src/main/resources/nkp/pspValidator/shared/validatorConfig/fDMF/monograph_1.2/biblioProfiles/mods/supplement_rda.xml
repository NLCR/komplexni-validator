<?xml version="1.0" encoding="UTF-8"?>
<metadataProfile
        xmlns="http://www.nkp.cz/pspValidator/2.3/metadataProfile"
        name="MODS supplement (RDA)"
        validatorVersion="2.3"
        dmf="monograph_1.2"
>

    <info>
        <text>DMF Monografie-1.2 očekává MODS verze 3.5. Dále se zde upřesňují očekávaná metadata pro přílohu pro
            záznamy zpracované podle katalogizačních pravidel RDA.
        </text>
        <url>http://www.loc.gov/standards/mods/</url>
        <url description="XSD pro MODS 3.5">http://www.loc.gov/standards/mods/v3/mods-3-5.xsd</url>
        <url description="popis MODS 3.5">http://www.loc.gov/standards/mods/mods-outline-3-5.html</url>
    </info>

    <namespaces>
        <namespace prefix="mods">http://www.loc.gov/mods/v3</namespace>
    </namespaces>

    <dictionaries>
        <dictionary name="marcRelatorCodes"
                    description="kódy rolí podle MARC21"
                    url="http://www.loc.gov/marc/relators/relaterm.html"/>
        <dictionary name="iso6392languageCodes"
                    description="kódy jazyků podle ISO 639-2"
                    url="http://www.loc.gov/standards/iso639-2/php/code_list.php"/>
        <dictionary name="siglaInstitutionCodes"
                    description="sigly knihoven"/>
    </dictionaries>

    <rootElement name="mods:mods">
        <expectedAttributes>
            <attribute name="ID">
                <expectedContent>
                    <regexp>MODS_SUPPL_[0-9]{4}</regexp>>
                </expectedContent>
            </attribute>
        </expectedAttributes>
        <expectedElements>
            <element name="mods:titleInfo" mandatory="false">
                <!--DMF nespecifikuje, zda je titleInfo povinny element, nechavam nepovinny-->
                <expectedElements>
                    <element name="mods:title">
                        <expectedContent/>
                    </element>

                    <element name="mods:partNumber" mandatory="false">
                        <expectedContent/>
                    </element>

                    <element name="mods:partName" mandatory="false">
                        <expectedContent/>
                    </element>
                </expectedElements>
            </element>

            <element name="mods:name" mandatory="false">
                <expectedAttributes>
                    <attribute name="type" mandatory="true">
                        <expectedContent>
                            <oneOf>
                                <value>personal</value>
                                <value>corporate</value>
                                <value>conference</value>
                                <value>family</value>
                            </oneOf>
                        </expectedContent>
                    </attribute>
                </expectedAttributes>
                <expectedElements>
                    <element name="mods:namePart" specification="@type='date'" mandatory="false">
                        <expectedAttributes>
                            <attribute name="type"/>
                        </expectedAttributes>
                        <expectedContent/>
                    </element>

                    <element name="mods:namePart" specification="@type='family'" mandatory="false">
                        <expectedAttributes>
                            <attribute name="type"/>
                        </expectedAttributes>
                        <expectedContent/>
                    </element>

                    <element name="mods:namePart" specification="@type='given'" mandatory="false">
                        <expectedAttributes>
                            <attribute name="type"/>
                        </expectedAttributes>
                        <expectedContent/>
                    </element>

                    <element name="mods:namePart" specification="@type='termsOfAddress'" mandatory="false">
                        <expectedAttributes>
                            <attribute name="type"/>
                        </expectedAttributes>
                        <expectedContent/>
                    </element>

                    <!--namePart s celym jmenem-->
                    <element name="mods:namePart" specification="not(@type)" mandatory="false">
                        <expectedContent/>
                    </element>

                    <element name="mods:role" mandatory="false">
                        <expectedElements>
                            <element name="mods:roleTerm" mandatory="false">
                                <expectedAttributes>
                                    <attribute name="type">
                                        <expectedContent>
                                            <value>code</value>
                                        </expectedContent>
                                    </attribute>
                                    <attribute name="authority" mandatory="false">
                                        <recommendedContent>
                                            <value>marcrelator</value>
                                        </recommendedContent>
                                    </attribute>
                                </expectedAttributes>
                                <recommendedContent>
                                    <fromDictionary name="marcRelatorCodes"/>
                                </recommendedContent>
                            </element>
                        </expectedElements>
                    </element>
                </expectedElements>
                <extraRules>
                    <!--  Musí existovat alespoň jeden element namePart-->
                    <existsAtLeastOnce xpath="mods:namePart"/>
                </extraRules>
            </element>

            <element name="mods:typeOfResource" mandatory="false">
                <expectedContent>
                    <oneOf>
                        <value>text</value>
                        <value>cartographic</value>
                        <value>notated music</value>
                        <value>sound recording-musical</value>
                        <value>sound recording-nonmusical</value>
                        <value>sound recording</value>
                        <value>still image</value>
                        <value>moving image</value>
                        <value>three dimensional object</value>
                        <value>software, multimedia</value>
                        <value>mixed material</value>
                    </oneOf>
                </expectedContent>
            </element>

            <element name="mods:genre" specification="text()='supplement'"/>

            <element name="mods:originInfo" specification="@eventType='production'" mandatory="false">
                <expectedAttributes>
                    <attribute name="eventType"/>
                </expectedAttributes>
                <expectedElements>
                    <element name="mods:place" mandatory="false">
                        <expectedElements>
                            <element name="mods:placeTerm" mandatory="false">
                                <expectedAttributes>
                                    <attribute name="type">
                                        <expectedContent>
                                            <oneOf>
                                                <value>code</value>
                                                <value>text</value>
                                            </oneOf>
                                        </expectedContent>
                                    </attribute>

                                    <attribute name="authority" mandatory="false">
                                        <expectedContent>
                                            <value>marccountry</value>
                                        </expectedContent>
                                    </attribute>
                                </expectedAttributes>
                                <expectedContent/>
                            </element>
                        </expectedElements>
                    </element>

                    <element name="mods:publisher" mandatory="false">
                        <expectedContent/>
                    </element>

                    <element name="mods:dateOther" mandatory="false">
                        <expectedAttributes>
                            <attribute name="type">
                                <expectedContent>
                                    <value>production</value>
                                </expectedContent>
                            </attribute>

                            <attribute name="qualifier" mandatory="false"/>
                        </expectedAttributes>
                        <expectedContent/>
                    </element>
                </expectedElements>
            </element>

            <element name="mods:originInfo" specification="@eventType='publication'">
