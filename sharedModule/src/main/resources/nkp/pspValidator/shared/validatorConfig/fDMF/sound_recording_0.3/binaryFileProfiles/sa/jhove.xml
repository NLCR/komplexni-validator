<binaryFileProfile
        xmlns="http://www.nkp.cz/pspValidator/2.1/binaryFileProfile"
        validatorVersion="2.1"
        dmf="sound_recording_0.3"
>
    <fromXml>
        <namespaces>
            <!--<defaultNamespace>http://hul.harvard.edu/ois/xml/ns/jhove</defaultNamespace>-->
            <namespace prefix="j">http://hul.harvard.edu/ois/xml/ns/jhove</namespace>
            <namespace prefix="m">http://www.loc.gov/mix/v20</namespace>
        </namespaces>

        <validation name="Status valid">
            <xmlDataExtraction resultType="STRING">
                <firstNonempty>
                    <xpath>//j:repInfo/j:status</xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
                <mustMatchAny>
                    <constant>Well-Formed and valid</constant>
                </mustMatchAny>
            </rules>
        </validation>

        <validation name="Identifikace formÃ¡tu">
            <xmlDataExtraction resultType="STRING">
                <firstNonempty>
                    <xpath>//j:repInfo/j:format</xpath>
                </firstNonempty>
            </xmlDataExtraction>
            <rules>
                <mustExist/>
                <mustMatchAny>
                    <constant>WAVE</constant>
                </mustMatchAny>
            </rules>
        </validation>

    </fromXml>
</binaryFileProfile>
