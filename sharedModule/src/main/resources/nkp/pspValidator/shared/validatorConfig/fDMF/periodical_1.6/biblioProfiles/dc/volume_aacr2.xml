<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<metadataProfile
        xmlns="http://www.nkp.cz/pspValidator/2.3/metadataProfile"
        name="DC volume (AACR2)"
        validatorVersion="2.3"
        dmf="periodical_1.6"
>
    <info>
        <text>DMF Periodika-1.6 očekává Dublin Core verze 1.1. Dále se zde upřesňují očekávaná metadata pro ročník
            periodika pro záznamy zpracované podle katalogizačních pravidel AACR2.
        </text>
        <url description="popis Dublin Core 1.1">http://dublincore.org/documents/dces/</url>
        <url description="XSD pro Dublin Core 1.1">http://www.openarchives.org/OAI/2.0/oai_dc.xsd</url>
    </info>

    <namespaces>
        <namespace prefix="oai_dc">http://www.openarchives.org/OAI/2.0/oai_dc/</namespace>
        <namespace prefix="dc">http://purl.org/dc/elements/1.1/</namespace>
    </namespaces>

    <rootElement name="oai_dc:dc">
        <expectedElements>

            <element name="dc:description" mandatory="false">
                <expectedContent/>
            </element>

            <element name="dc:creator" mandatory="false">
                <expectedContent/>
            </element>

            <element name="dc:type" specification="text() = 'model:periodicalvolume'"
                     errorMessage="Očekáván právě jeden povinný element dc:type obsahující text 'model:periodicalvolume'.">
                <expectedContent/>
            </element>

            <element name="dc:date"
                     errorMessage="Očekáván povinný element dc:date obsahující datum vydání předlohy.">
                <expectedContent/>
            </element>

            <element name="dc:identifier" errorMessage="Očekáván alespoň jeden povinný element dc:identifier.">
                <expectedContent/>
            </element>

        </expectedElements>
    </rootElement>
</metadataProfile>

	