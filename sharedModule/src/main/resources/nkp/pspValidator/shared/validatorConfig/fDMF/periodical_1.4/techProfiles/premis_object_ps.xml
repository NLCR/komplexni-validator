<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<validationTemplate
        xmlns="http://www.nkp.cz/pspValidator/1.4/metadataProfile"
        name="PREMIS Object pro PS (primární sken)"
        validatorVersion="1.4"
        dmf="periodical_1.4"
>

    <info>
        <text>
            Profil pro validaci PREMIS Object záznamu primárního skenu (PS) stránky v sekundárním MODSu pro DMF
            Periodika-1.4.
        </text>
        <url description="popis formátu PREMIS">http://www.loc.gov/standards/premis/</url>
        <url description="XSD pro PREMIS 2.2">http://www.loc.gov/standards/premis/v2/premis-v2-2.xsd</url>
    </info>

    <namespaces>
        <namespace prefix="mets">http://www.loc.gov/METS/</namespace>
        <namespace prefix="premis">info:lc/xmlns/premis-v2</namespace>
        <namespace prefix="xsi">http://www.w3.org/2001/XMLSchema-instance</namespace>
    </namespaces>

    <rootElement name="mets:techMD">
        <expectedAttributes>
            <attribute name="ID">
                <expectedContent>
                    <value>OBJ_001</value>
                </expectedContent>
            </attribute>
        </expectedAttributes>

        <expectedElements>
            <element name="mets:mdWrap">
                <expectedAttributes>
                    <attribute name="MDTYPE">
                        <expectedContent>
                            <value>PREMIS</value>
                        </expectedContent>
                    </attribute>

                    <attribute name="MIMETYPE">
                        <expectedContent>
                            <value>text/xml</value>
                        </expectedContent>
                    </attribute>
                </expectedAttributes>

                <expectedElements>
                    <element name="mets:xmlData">
                        <expectedElements>
                            <element name="premis:object" mandatory="true" repeatable="false">
                                <expectedElements>
                                    <element name="premis:objectIdentifier" mandatory="true" repeatable="true">
                                        <expectedElements>
                                            <element name="premis:objectIdentifierType" mandatory="true"
                                                     repeatable="false">
                                                <expectedContent/>
                                            </element>

                                            <element name="premis:objectIdentifierValue" mandatory="true"
                                                     repeatable="false">
                                                <expectedContent/>
                                            </element>
                                        </expectedElements>
                                    </element>

                                    <element name="premis:objectCategory" mandatory="true" repeatable="false">
                                        <expectedContent/>
                                    </element>

                                    <!--Neni jasna povinnost - konflikt povinnost=M a vyskyt=0-n, viz DMF Periodika 1.4: s. 48. Nechavam defenzivne nepovinne-->
                                    <element name="premis:preservationLevel" mandatory="false" repeatable="true">
                                        <expectedElements>
                                            <element name="premis:preservationLevelValue" mandatory="true"
                                                     repeatable="false">
                                                <expectedContent>
                                                    <value>deleted</value>
                                                </expectedContent>
                                            </element>

                                            <element name="premis:preservationLevelDateAssigned" mandatory="false"
                                                     repeatable="false">
                                                <expectedContent>
                                                    <regexp>[0-9]{4}-[0-9]{2}-[0-9]{2}</regexp>
                                                </expectedContent>
                                            </element>
                                        </expectedElements>
                                    </element>

                                    <element name="premis:objectCharacteristics" mandatory="true" repeatable="true">
                                        <expectedElements>
                                            <element name="premis:compositionLevel" mandatory="true" repeatable="false">
                                                <expectedContent/>
                                            </element>

                                            <!--Neni jasna povinnost - konflikt povinnost=M a vyskyt=0-n, viz DMF Periodika 1.4: s. 48. Nechavam defenzivne nepovinne-->
                                            <element name="premis:fixity" mandatory="false" repeatable="true">
                                                <expectedElements>
                                                    <element name="premis:messageDigestAlgorithm" mandatory="true"
                                                             repeatable="false">
                                                        <expectedContent/>
                                                    </element>

                                                    <element name="premis:messageDigest" mandatory="true"
                                                             repeatable="false">
                                                        <expectedContent/>
                                                    </element>
                                                    <!--Neni jasna povinnost - konflikt povinnost=M a vyskyt=0-n, viz DMF Periodika 1.4: s. 49. Nechavam defenzivne nepovinne-->
                                                    <element name="premis:messageDigestOriginator" mandatory="false"
                                                             repeatable="false">
                                                        <expectedContent/>
                                                    </element>
                                                </expectedElements>
                                            </element>

                                            <!--Neni jasna povinnost - konflikt povinnost=M a vyskyt=0-n, viz DMF Periodika 1.4: s. 49. Nechavam defenzivne nepovinne-->
                                            <element name="premis:size" mandatory="false" repeatable="false">
                                                <expectedContent>
                                                    <regexp>[0-9]+</regexp>
                                                </expectedContent>
                                            </element>

                                            <element name="premis:format" mandatory="false" repeatable="true">
                                                <expectedElements>
                                                    <!--Neni jasna povinnost - konflikt povinnost=M a vyskyt=0-n, viz DMF Periodika 1.4: s. 49. Nechavam defenzivne nepovinne-->
                                                    <element name="premis:formatDesignation" mandatory="false"
                                                             repeatable="false">
                                                        <expectedElements>
                                                            <element name="premis:formatName" mandatory="true"
                                                                     repeatable="false">
                                                                <expectedContent/>
                                                            </element>

                                                            <!--Neni jasna povinnost - konflikt povinnost=M a vyskyt=0-n, viz DMF Periodika 1.4: s. 49. Nechavam defenzivne nepovinne-->
                                                            <element name="premis:formatVersion" mandatory="false"
                                                                     repeatable="false">
                                                                <expectedContent/>
                                                            </element>
                                                        </expectedElements>
                                                    </element>

                                                    <!--Neni jasna povinnost - konflikt povinnost=M a vyskyt=0-n, viz DMF Periodika 1.4: s. 49. Nechavam defenzivne nepovinne-->
                                                    <element name="premis:formatRegistry" mandatory="false"
                                                             repeatable="false">
                                                        <expectedElements>
                                                            <element name="premis:formatRegistryName" mandatory="true"
                                                                     repeatable="false">
                                                                <expectedContent/>
                                                            </element>

                                                            <element name="premis:formatRegistryKey" mandatory="true"
                                                                     repeatable="false">
                                                                <expectedContent/>
                                                            </element>
                                                        </expectedElements>
                                                    </element>
                                                </expectedElements>
                                            </element>

                                            <!--Neni jasna povinnost - konflikt povinnost=M a vyskyt=0-n, viz DMF Periodika 1.4: s. 49. Nechavam defenzivne nepovinne-->
                                            <element name="premis:creatingApplication" mandatory="false"
                                                     repeatable="true">
                                                <expectedElements>
                                                    <!--Neni jasna povinnost - konflikt povinnost=M a vyskyt=0-1, viz DMF Periodika 1.4: s. 49. Nechavam defenzivne nepovinne-->
                                                    <element name="premis:creatingApplicationName" mandatory="false"
                                                             repeatable="false">
                                                        <expectedContent/>
                                                    </element>

                                                    <!--Neni jasna povinnost - konflikt povinnost=M a vyskyt=0-1, viz DMF Periodika 1.4: s. 49. Nechavam defenzivne nepovinne-->
                                                    <element name="premis:creatingApplicationVersion" mandatory="false"
                                                             repeatable="false">
                                                        <expectedContent/>
                                                    </element>

                                                    <!--Neni jasna povinnost - konflikt povinnost=M a vyskyt=0-1, viz DMF Periodika 1.4: s. 49. Nechavam defenzivne nepovinne-->
                                                    <element name="premis:dateCreatedByApplication" mandatory="false"
                                                             repeatable="false">
                                                        <expectedContent>
                                                            <!--TODO: mozna regulernim vyrazem, resp. skupinou, protoze ten zapis muze byt dost ruzny - uz jenom oddelovace, viz. treba
                                                                http://www.pelagodesign.com/blog/2009/05/20/iso-8601-date-validation-that-doesnt-suck/
                                                            -->
                                                        </expectedContent>
                                                    </element>
                                                </expectedElements>
                                            </element>
                                        </expectedElements>
                                    </element>

                                    <!--Neni jasna povinnost - konflikt povinnost=M a vyskyt=0-1, viz DMF Periodika 1.4: s. 59. Nechavam defenzivne nepovinne-->
                                    <element name="premis:originalName" mandatory="false" repeatable="false">
                                        <expectedContent/>
                                    </element>

                                    <!--Neni jasna povinnost - konflikt povinnost=M a vyskyt=0-n, viz DMF Periodika 1.4: s. 60. Nechavam defenzivne nepovinne-->
                                    <element name="premis:linkingEventIdentifier" mandatory="false"
                                             repeatable="true">
                                        <expectedElements>
                                            <element name="premis:linkingEventIdentifierType" mandatory="true"
                                                     repeatable="true">
                                                <expectedContent/>
                                            </element>

                                            <element name="premis:linkingEventIdentifierValue" mandatory="true"
                                                     repeatable="true">
                                                <expectedContent/>
                                            </element>
                                        </expectedElements>
                                    </element>
                                </expectedElements>
                            </element>
                        </expectedElements>
                    </element>
                </expectedElements>
            </element>
        </expectedElements>
    </rootElement>

</validationTemplate>