                                                <expectedElements>
                                                    <element name="mix:imageWidth" mandatory="true" repeatable="false">
                                                        <expectedContent>
                                                            <regexp>[0-9]+</regexp>
                                                        </expectedContent>
                                                    </element>

                                                    <element name="mix:imageHeight" mandatory="true"
                                                             repeatable="false">
