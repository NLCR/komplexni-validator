                        </expectedContent>
                    </attribute>
                </expectedAttributes>

                <expectedElements>
                    <element name="mets:xmlData">
                        <expectedElements>
                            <element name="mix:mix">
                                <expectedElements>
                                    <element name="mix:BasicDigitalObjectInformation">
                                        <expectedElements>
                                            <element name="mix:ObjectIdentifier" mandatory="false" repeatable="true">
