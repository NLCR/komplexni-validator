<?xml version="1.0" encoding="UTF-8"?>
<validationTemplate
        xmlns="http://www.nkp.cz/pspValidator/1.1/xmlValidationTemplate"
        name="DC supplement (AACR2)"
>

    <info>
        <text>DMF Monografie-1.2 očekává Dublin Core verze 1.1. Dále se zde upřesňují očekávaná metadata pro přílohu pro
            záznamy zpracované podle katalogizačních pravidel AACR2.
        </text>
        <url description="popis Dublin Core 1.1">http://dublincore.org/documents/dces/</url>
        <url description="XSD pro Dublin Core 1.1">http://www.openarchives.org/OAI/2.0/oai_dc.xsd</url>
    </info>

    <namespaces>
        <namespace prefix="oai_dc">http://www.openarchives.org/OAI/2.0/oai_dc/</namespace>
        <namespace prefix="dc">http://purl.org/dc/elements/1.1/</namespace>
    </namespaces>

    <rootElement name="oai_dc:dc">
        <expectedElements>

            <element name="dc:title"
                     errorMessage="Očekáván povinný element dc:title obsahující název svazku monografie, jehož součástí příloha je, případně název přílohy.">
                <expectedContent/>
            </element>

            <element name="dc:description" mandatory="false">
                <expectedContent/>
            </element>

            <element name="dc:creator" errorMessage="Údaje o křestním jméně a příjmení apod. autora.">
                <expectedContent/>
            </element>

            <element name="dc:type" repeatable="false"
                     errorMessage="Očekáván právě jeden povinný element dc:type obsahující 'model:supplement'.">
                <expectedContent>
                    <value>model:supplement</value>
                </expectedContent>
            </element>

            <element name="dc:coverage" mandatory="false">
                <expectedContent/>
            </element>

            <element name="dc:publisher" mandatory="false">
                <expectedContent/>
            </element>

            <element name="dc:date" mandatory="false">
                <expectedContent/>
            </element>

        </expectedElements>
    </rootElement>

</validationTemplate>

	