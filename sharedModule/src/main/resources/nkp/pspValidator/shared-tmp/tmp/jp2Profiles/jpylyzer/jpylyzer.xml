<imageUtil name="jpylyzer" version="1.17" enabled="true">

    <versionDetection>
        <operatingSystem name="Linux">
            <command>
                <path>/usr/bin</path>
                <rawCommand>jpylyzer --version</rawCommand>
            </command>
            <parser>
                <stream>stderr</stream>
                <type>text</type>
                <regexp>*</regexp>
            </parser>
            <!--todo: pravidlo, ktere z parsovaneho vystupu rozhodne, jestli nastroj instalovany je-->
        </operatingSystem>
        <operatingSystem name="Windows">
            <command>
                <path>C:\Program Files\jpylyzer</path>
                <rawCommand>jpylyzer --version</rawCommand>
            </command>
            <parser>
                <stream>stderr</stream>
                <type>text</type>
                <regexp>*</regexp>
            </parser>
        </operatingSystem>
    </versionDetection>

    <execution>
        <operatingSystem name="Linux">
            <command>
                <path>/usr/bin</path>
                <rawCommand>jpylyzer jp2In ${IMAGE_FILE}</rawCommand>
            </command>
            <parser>
                <stream>stdout</stream>
                <type>xml</type>
                <regexp>*</regexp>
            </parser>
        </operatingSystem>
        <operatingSystem name="Windows">
            <command>
                <path>C:\Program Files\jpylyzer</path>
                <rawCommand>jpylyzer jp2In ${IMAGE_FILE}</rawCommand>
            </command>
            <parser>
                <stream>stdout</stream>
                <type>xml</type>
                <regexp>*</regexp>
            </parser>
        </operatingSystem>
    </execution>

</imageUtil>