<imageUtil name="jpylyzer">

    <versionDetection>
        <operatingSystem name="Linux">
            <execution>
                <path>/usr/bin</path>
                <command>jpylyzer --version</command>
            </execution>
            <parsing>
                <stream>stderr</stream>
                <type>text</type>
                <regexp>*</regexp>
            </parsing>
            <!--todo: pravidlo, ktere z parsovaneho vystupu rozhodne, jestli nastroj instalovany je-->
        </operatingSystem>
        <operatingSystem name="Windows">
            <execution>
                <path>C:\Program Files\jpylyzer</path>
                <command>jpylyzer --version</command>
            </execution>
            <parsing>
                <stream>stderr</stream>
                <type>text</type>
                <regexp>*</regexp>
            </parsing>
        </operatingSystem>
    </versionDetection>

    <run>
        <operatingSystem name="Linux">
            <execution>
                <path>/usr/bin</path>
                <command>jpylyzer jp2In ${IMAGE_FILE}</command>
            </execution>
            <parsing>
                <stream>stdout</stream>
                <type>xml</type>
                <regexp>*</regexp>
            </parsing>
        </operatingSystem>
        <operatingSystem name="Windows">
            <execution>
                <path>C:\Program Files\jpylyzer</path>
                <command>jpylyzer jp2In ${IMAGE_FILE}</command>
            </execution>
            <parsing>
                <stream>stdout</stream>
                <type>xml</type>
                <regexp>*</regexp>
            </parsing>
        </operatingSystem>
    </run>

</imageUtil>