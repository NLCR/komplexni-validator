            <validationFunction name="CHECK_FILENAME_MATCHES_PATTERN">
                <params>
                    <param name="file">
                        <variable name="OCR-ALTO-DIR_FILE"/>
                    </param>
                    <param name="pattern">
                        <pattern name="FILENAME"/>
                    </param>
                </params>
            </validationFunction>
        </rule>

        <rule name="MASTER-COPY-DIR_FILENAME_VALID" level="severe">
            <description>Název adresáře MASTER-COPY-DIR musí obsahovat jen povolené znaky.
            </description>
            <validationFunction name="CHECK_FILENAME_MATCHES_PATTERN">
                <params>
                    <param name="file">
                        <variable name="MASTER-COPY-DIR_FILE"/>
                    </param>
                    <param name="pattern">
                        <pattern name="FILENAME"/>
                    </param>
                </params>
            </validationFunction>
        </rule>

        <rule name="USER-COPY-DIR_FILENAME_VALID" level="severe">
            <description>Název adresáře USER-COPY-DIR musí obsahovat jen povolené znaky.
            </description>
            <validationFunction name="CHECK_FILENAME_MATCHES_PATTERN">
                <params>
                    <param name="file">
                        <variable name="USER-COPY-DIR_FILE"/>
                    </param>
                    <param name="pattern">
                        <pattern name="FILENAME"/>
                    </param>
                </params>
            </validationFunction>
        </rule>


        <!--top-level adresáře jsou adresáře (ne obyčejné soubory)-->

        <rule name="SECONDARY-METS-DIR_IS_DIR" level="severe">
            <description>Soubor SECONDARY-METS-DIR musí být adresář a ne obyčejný soubor.</description>
            <validationFunction name="CHECK_FILE_IS_DIR">
                <params>
                    <param name="file">
                        <variable name="SECONDARY-METS-DIR_FILE"/>
                    </param>
                </params>
            </validationFunction>
        </rule>

        <rule name="OCR-TEXT-DIR_IS_DIR" level="severe">
            <description>Soubor OCR-TEXT-DIR musí být adresář a ne obyčejný soubor.</description>
            <validationFunction name="CHECK_FILE_IS_DIR">
                <params>
                    <param name="file">
                        <variable name="OCR-TEXT-DIR_FILE"/>
                    </param>
                </params>
            </validationFunction>
        </rule>

        <rule name="OCR-ALTO-DIR_IS_DIR" level="severe">
            <description>Soubor OCR-ALTO-DIR musí být adresář a ne obyčejný soubor.</description>
            <validationFunction name="CHECK_FILE_IS_DIR">
                <params>
                    <param name="file">
                        <variable name="OCR-ALTO-DIR_FILE"/>
                    </param>
                </params>
            </validationFunction>
        </rule>

        <rule name="MASTER-COPY-DIR_IS_DIR" level="severe">
            <description>Soubor MASTER-COPY-DIR musí být adresář a ne obyčejný soubor.</description>
            <validationFunction name="CHECK_FILE_IS_DIR">
                <params>
                    <param name="file">
                        <variable name="MASTER-COPY-DIR_FILE"/>
                    </param>
                </params>
            </validationFunction>
        </rule>

        <rule name="USER-COPY-DIR_IS_DIR" level="severe">
            <description>Soubor USER-COPY-DIR musí být adresář a ne obyčejný soubor.</description>
            <validationFunction name="CHECK_FILE_IS_DIR">
                <params>
                    <param name="file">
                        <variable name="USER-COPY-DIR_FILE"/>
                    </param>
                </params>
            </validationFunction>
        </rule>


        <!--názvy souborů v top-level adresářích obsahují jen povolené znaky-->


        <rule name="SECONDARY-METS_FILENAMES_VALID" level="severe">
            <description>Všechny soubory SECONDARY-METS musí obsahovat jen povolené znaky.</description>
            <validationFunction name="CHECK_ALL_FILENAMES_MATCH_PATTERN">
                <params>
                    <param name="file_list">
                        <variable name="SECONDARY-METS_FILES"/>
                    </param>
                    <param name="pattern">
                        <pattern name="FILENAME"/>
                    </param>
                </params>
            </validationFunction>
        </rule>

        <rule name="OCR-TEXT_FILENAMES_VALID" level="severe">
            <description>Všechny soubory OCR-TEXT musí obsahovat jen povolené znaky.</description>
            <validationFunction name="CHECK_ALL_FILENAMES_MATCH_PATTERN">
                <params>
                    <param name="file_list">
                        <variable name="OCR-TEXT_FILES"/>
                    </param>
                    <param name="pattern">
                        <pattern name="FILENAME"/>
                    </param>
                </params>
            </validationFunction>
        </rule>

        <rule name="OCR-ALTO_FILENAMES_VALID" level="severe">
            <description>Všechny soubory OCR-ALTO musí obsahovat jen povolené znaky.</description>
            <validationFunction name="CHECK_ALL_FILENAMES_MATCH_PATTERN">
                <params>
                    <param name="file_list">
                        <variable name="OCR-ALTO_FILES"/>
                    </param>
                    <param name="pattern">
                        <pattern name="FILENAME"/>
                    </param>
                </params>
            </validationFunction>
        </rule>

        <rule name="MASTER-COPY_FILENAMES_VALID" level="severe">
            <description>Všechny soubory MASTER-COPY musí obsahovat jen povolené znaky.</description>
            <validationFunction name="CHECK_ALL_FILENAMES_MATCH_PATTERN">
                <params>
                    <param name="file_list">
                        <variable name="MASTER-COPY_FILES"/>
                    </param>
                    <param name="pattern">
                        <pattern name="FILENAME"/>
                    </param>
                </params>
            </validationFunction>
        </rule>

        <rule name="USER-COPY_FILENAMES_VALID" level="severe">
            <description>Všechny soubory USER-COPY musí obsahovat jen povolené znaky.</description>
            <validationFunction name="CHECK_ALL_FILENAMES_MATCH_PATTERN">
                <params>
                    <param name="file_list">
                        <variable name="USER-COPY_FILES"/>
                    </param>
                    <param name="pattern">
                        <pattern name="FILENAME"/>
                    </param>
                </params>
            </validationFunction>
        </rule>


        <!--počty souborů a délky názvů soborů v top-level adesářích-->

        <rule name="NUMBER_OF_FILES_IN_DIRS_MATCH" level="severe">
            <description>Počet souborů ve všech adresářích se musí shodovat.</description>
            <validationFunction name="CHECK_ALL_LISTS_SAME_SIZE">
                <params>
                    <param name="list">
                        <variable name="SECONDARY-METS_FILES"/>
                    </param>
                    <param name="list">
                        <variable name="OCR-TEXT_FILES"/>
                    </param>
                    <param name="list">
                        <variable name="OCR-ALTO_FILES"/>
                    </param>
                    <param name="list">
                        <variable name="MASTER-COPY_FILES"/>
                    </param>
                    <param name="list">
                        <variable name="USER-COPY_FILES"/>
                    </param>
                </params>
            </validationFunction>
        </rule>

        <!--fadfad-->

        <rule name="SECONDARY-METS_FILENAMES_LENGTHS_SAME" level="severe">
            <description>Délky názvů všech souborů SECONDARY-METS musí být stejné. Tedy čísla stran jsou zarovnaná na
                stejný počet nul.
            </description>
            <validationFunction name="CHECK_FILENAMES_LENGTHS_SAME">
                <params>
                    <param name="file_list">
                        <variable name="SECONDARY-METS_FILES"/>
                    </param>
                </params>
            </validationFunction>
        </rule>

        <rule name="OCR-TEXT_FILENAMES_LENGTHS_SAME" level="severe">
            <description>Délky názvů všech souborů OCR-TEXT musí být stejné. Tedy čísla stran jsou zarovnaná na stejný
                počet nul.
            </description>
            <validationFunction name="CHECK_FILENAMES_LENGTHS_SAME">
                <params>
                    <param name="file_list">
                        <variable name="OCR-TEXT_FILES"/>
                    </param>
                </params>
            </validationFunction>
        </rule>

        <rule name="OCR-ALTO_FILENAMES_LENGTHS_SAME" level="severe">
            <description>Délky názvů všech souborů OCR-ALTO musí být stejné. Tedy čísla stran jsou zarovnaná na stejný
                počet nul.
            </description>
            <validationFunction name="CHECK_FILENAMES_LENGTHS_SAME">
                <params>
                    <param name="file_list">
                        <variable name="OCR-ALTO_FILES"/>
                    </param>
                </params>
            </validationFunction>
        </rule>

        <rule name="MASTER-COPY_FILENAMES_LENGTHS_SAME" level="severe">
            <description>Délky názvů všech souborů MASTER-COPY musí být stejné. Tedy čísla stran jsou zarovnaná na
                stejný počet nul.
            </description>
            <validationFunction name="CHECK_FILENAMES_LENGTHS_SAME">
                <params>
                    <param name="file_list">
                        <variable name="MASTER-COPY_FILES"/>
                    </param>
                </params>
            </validationFunction>
        </rule>

        <rule name="USER-COPY_FILENAMES_LENGTHS_SAME" level="severe">
            <description>Délky názvů všech souborů USER-COPY musí být stejné. Tedy čísla stran jsou zarovnaná na stejný
                počet nul.
            </description>
            <validationFunction name="CHECK_FILENAMES_LENGTHS_SAME">
                <params>
                    <param name="file_list">
                        <variable name="USER-COPY_FILES"/>
                    </param>
                </params>
            </validationFunction>
        </rule>


        <!--žádný ze souborů v top-level adresářích není adresář-->

        <rule name="SECONDARY-METS_FILES_ARE_NOT_DIRS" level="severe">
            <description>Žádný soubor SECONDARY-METS nesmí být adresář.</description>
            <validationFunction name="CHECK_NO_FILE_IS_DIR">
                <params>
                    <param name="file_list">
                        <variable name="SECONDARY-METS_FILES"/>
                    </param>
                </params>
            </validationFunction>
        </rule>

        <rule name="OCR-TEXT_FILES_ARE_NOT_DIRS" level="severe">
            <description>Žádný soubor OCR-TEXT nesmí být adresář.</description>
            <validationFunction name="CHECK_NO_FILE_IS_DIR">
                <params>
                    <param name="file_list">
                        <variable name="OCR-TEXT_FILES"/>
                    </param>
                </params>
            </validationFunction>
        </rule>

        <rule name="OCR-ALTO_FILES_ARE_NOT_DIRS" level="severe">
            <description>Žádný soubor OCR-ALTO nesmí být adresář.</description>
            <validationFunction name="CHECK_NO_FILE_IS_DIR">
                <params>
                    <param name="file_list">
                        <variable name="OCR-ALTO_FILES"/>
                    </param>
                </params>
            </validationFunction>
        </rule>

        <rule name="MASTER-COPY_FILES_ARE_NOT_DIRS" level="severe">
            <description>Žádný soubor MASTER-COPY nesmí být adresář.</description>
            <validationFunction name="CHECK_NO_FILE_IS_DIR">
                <params>
                    <param name="file_list">
                        <variable name="MASTER-COPY_FILES"/>
                    </param>
                </params>
            </validationFunction>
        </rule>

        <rule name="USER-COPY_FILES_ARE_NOT_DIRS" level="severe">
            <description>Žádný soubor USER-COPY nesmí být adresář.</description>
            <validationFunction name="CHECK_NO_FILE_IS_DIR">
                <params>
                    <param name="file_list">
                        <variable name="USER-COPY_FILES"/>
                    </param>
                </params>
            </validationFunction>
        </rule>


        <!--žádné další soubory v top-level adresářích-->


        <rule name="NO_EXTRA_FILES_IN_SECONDARY-METS-DIR" level="severe">
            <description>Kromě souborů SECONDARY-METS nesmí adresář SECONDARY-METS-DIR obsahovat žádné další soubory.
            </description>
            <validationFunction name="CHECK_NO_OTHER_FILES_IN_DIR">
                <params>
                    <param name="root_dir">
                        <variable name="SECONDARY-METS-DIR_FILE"/>
                    </param>
                    <param name="file_list">
                        <variable name="SECONDARY-METS_FILES"/>
                    </param>
                </params>
            </validationFunction>
        </rule>

        <rule name="NO_EXTRA_FILES_IN_OCR-TEXT-DIR" level="severe">
            <description>Kromě souborů OCR-TEXT nesmí adresář OCR-TEXT-DIR obsahovat žádné další soubory.</description>
            <validationFunction name="CHECK_NO_OTHER_FILES_IN_DIR">
                <params>
                    <param name="root_dir">
                        <variable name="OCR-TEXT-DIR_FILE"/>
                    </param>
                    <param name="file_list">
                        <variable name="OCR-TEXT_FILES"/>
                    </param>
                </params>
            </validationFunction>
        </rule>

        <rule name="NO_EXTRA_FILES_IN_OCR-ALTO-DIR" level="severe">
            <description>Kromě souborů OCR-ALTO nesmí adresář OCR-ALTO-DIR obsahovat žádné další soubory.</description>
            <validationFunction name="CHECK_NO_OTHER_FILES_IN_DIR">
                <params>
                    <param name="root_dir">
                        <variable name="OCR-ALTO-DIR_FILE"/>
                    </param>
                    <param name="file_list">
                        <variable name="OCR-ALTO_FILES"/>
                    </param>
                </params>
            </validationFunction>
        </rule>

        <rule name="NO_EXTRA_FILES_IN_MASTER-COPY-DIR" level="severe">
            <description>Kromě souborů MASTER-COPY nesmí adresář MASTER-COPY-DIR obsahovat žádné další soubory.
            </description>
            <validationFunction name="CHECK_NO_OTHER_FILES_IN_DIR">
                <params>
                    <param name="root_dir">
                        <variable name="MASTER-COPY-DIR_FILE"/>
                    </param>
                    <param name="file_list">
