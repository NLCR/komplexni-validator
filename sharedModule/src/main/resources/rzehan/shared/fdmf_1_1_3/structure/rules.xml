<rules>

    <description>
        Zde jsou definovány validační pravidla. K samotným validacím se používají validační funkce, jejichž parametry
        jsou definované proměnné, vzory a konstanty.
        Pravidla je možné dynamicky doplňovat/upravovat, ale je vždy nutné používat existující proměnné a vzory.
    </description>


    <section name="PSP ID" description="Identifikátor PSP">


        <!--psp id-->

        <rule name="PSP_ID_DERIVED_FROM_TITLE_ID" level="warning">
            <description>PSP-ID musí být odvozen od některého z povolených identifikátorů.</description>
            <!--TODO-->
        </rule>

    </section>


    <section name="Struktura souborů" description="Struktura PSP balicku na urovni soboru">


        <!--psp dir-->

        <rule name="PSP_DIR_MATCHES_PSP_ID" level="warning">
            <description>Název kořenového adresáře musí být schodný s PSP-ID.</description>
            <validationFunction name="CHECK_FILENAME_MATCHES_STRING">
                <params>
                    <param name="file">
                        <variable name="PSP_DIR"/>
                    </param>
                    <param name="string">
                        <variable name="PSP_ID"/>
                    </param>
                </params>
            </validationFunction>
        </rule>


        <!--právě jeden každý top-level soubor-->

        <rule name="SINGLE_INFO_FILE_EXISTS" level="severe">
            <description>Musí existovat nanejvýše jeden soubor INFO.</description>
            <validationFunction name="CHECK_LIST_EXACT_SIZE">
                <params>
                    <param name="list">
                        <variable name="INFO_FILES"/>
                    </param>
                    <param name="size">1</param>
                </params>
            </validationFunction>
        </rule>

        <rule name="SINGLE_PRIMARY-METS_FILE_EXISTS" level="severe">
            <description>Musí existovat nanejvýše jeden soubor PRIMARY-METS.</description>
            <validationFunction name="CHECK_LIST_EXACT_SIZE">
                <params>
                    <param name="list">
                        <variable name="PRIMARY-METS_FILES"/>
                    </param>
                    <param name="size">1</param>
                </params>
            </validationFunction>
        </rule>

        <rule name="SINGLE_CHECKSUM_FILE_EXISTS" level="severe">
            <description>Musí existovat nanejvýše jeden soubor CHECKSUM.</description>
            <validationFunction name="CHECK_LIST_EXACT_SIZE">
                <params>
                    <param name="list">
                        <variable name="CHECKSUM_FILES"/>
                    </param>
                    <param name="size">1</param>
                </params>
            </validationFunction>
        </rule>


        <!--názvy top-level souborů obsahují povolené znaky-->

        <rule name="INFO_FILENAME_VALID" level="severe">
            <description>Název souboru INFO obsahuje jen povolené znaky.</description>
            <validationFunction name="CHECK_FILENAME_MATCHES_PATTERN">
                <params>
                    <param name="file">
                        <variable name="INFO_FILE"/>
                    </param>
                    <param name="pattern">
                        <pattern name="FILENAME"/>
                    </param>
                </params>
            </validationFunction>
        </rule>

        <rule name="PRIMARY-METS_FILENAME_VALID" level="severe">
            <description>Název souboru PRIMARY-METS obsahuje jen povolené znaky.</description>
            <validationFunction name="CHECK_FILENAME_MATCHES_PATTERN">
                <params>
                    <param name="file">
                        <variable name="PRIMARY-METS_FILE"/>
                    </param>
                    <param name="pattern">
                        <pattern name="FILENAME"/>
                    </param>
                </params>
            </validationFunction>
        </rule>

        <rule name="CHECKSUM_FILENAME_VALID" level="severe">
            <description>Název souboru CHECKSUM obsahuje jen povolené znaky.</description>
            <validationFunction name="CHECK_FILENAME_MATCHES_PATTERN">
                <params>
                    <param name="file">
                        <variable name="CHECKSUM_FILE"/>
                    </param>
                    <param name="pattern">
                        <pattern name="FILENAME"/>
                    </param>
                </params>
            </validationFunction>
        </rule>


        <!--top-level soubory nejsou adresáře-->

        <rule name="INFO_IS_NOT_DIR" level="severe">
            <description>Soubor INFO není adresář, ale obyčejný soubor.</description>
            <validationFunction name="CHECK_FILE_IS_NOT_DIR">
                <params>
                    <param name="file">
                        <variable name="INFO_FILE"/>
                    </param>
                </params>
            </validationFunction>
        </rule>

        <rule name="PRIMARY-METS_IS_NOT_DIR" level="severe">
            <description>Soubor PRIMARY-METS není adresář, ale obyčejný soubor.</description>
            <validationFunction name="CHECK_FILE_IS_NOT_DIR">
                <params>
                    <param name="file">
                        <variable name="PRIMARY-METS_FILE"/>
                    </param>
                </params>
            </validationFunction>
        </rule>

        <rule name="CHECKSUM_IS_NOT_DIR" level="severe">
            <description>Soubor CHECKSUM není adresář, ale obyčejný soubor.</description>
            <validationFunction name="CHECK_FILE_IS_NOT_DIR">
                <params>
                    <param name="file">
                        <variable name="CHECKSUM_FILE"/>
                    </param>
                </params>
            </validationFunction>
        </rule>


        <!--žádné top-level soubory/adresáře kromě očekávaných a tolerovaných-->

        <rule name="TOLERATED_TL_FILES_ARE_NOT_DIRS" level="severe">
            <description>Žádný tolerovaný soubor v kořenovém adresáři nesmí být adresář.</description>
            <validationFunction name="CHECK_NO_FILE_IS_DIR">
                <params>
                    <param name="file_list">
                        <variable name="TOLERATED_TL_FILES"/>
                    </param>
                </params>
            </validationFunction>
        </rule>

        <rule name="NO_TOLERATED_TL_FILES_EXIST" level="warning">
            <description>Neměl by existovat žádný tolerovaný soubor.</description>
            <validationFunction name="CHECK_LIST_EMPTY">
                <params>
                    <param name="list">
                        <variable name="TOLERATED_TL_FILES"/>
                    </param>
                </params>
            </validationFunction>
        </rule>

        <rule name="NO_OTHER_TOP_LEVEL_FILES_EXIST" level="severe">
            <description>Krome definovaných souborů a adresářů nesmí v kořenovém adresáři existovat žádný jiný soubor
                nebo adresář.
            </description>
            <validationFunction name="CHECK_NO_OTHER_FILES_IN_DIR">
                <params>
                    <param name="root_dir">
                        <variable name="PSP_DIR"/>
                    </param>
                    <param name="file">
                        <variable name="INFO_FILE"/>
                    </param>
                    <param name="file">
                        <variable name="PRIMARY-METS_FILE"/>
                    </param>
                    <param name="file">
                        <variable name="CHECKSUM_FILE"/>
                    </param>
                    <param name="file_list">
                        <variable name="TOLERATED_TL_FILES"/>
                    </param>
                    <param name="file">
                        <variable name="SECONDARY-METS-DIR_FILE"/>
                    </param>
                    <param name="file">
                        <variable name="OCR-TEXT-DIR_FILE"/>
                    </param>
                    <param name="file">
                        <variable name="OCR-ALTO-DIR_FILE"/>
                    </param>
                    <param name="file">
                        <variable name="MASTER-COPY-DIR_FILE"/>
                    </param>
                    <param name="file">
                        <variable name="USER-COPY-DIR_FILE"/>
                    </param>
                </params>
            </validationFunction>
        </rule>


        <!--právě jeden každý top-level adresář-->


        <rule name="SINGLE_SECONDARY-METS-DIR_FILE_EXISTS" level="severe">
            <description>Musí existovat nanejvýše jeden soubor (adresář) SECONDARY-METS-DIR.</description>
            <validationFunction name="CHECK_LIST_EXACT_SIZE">
                <params>
                    <param name="list">
                        <variable name="SECONDARY-METS-DIR_FILES"/>
                    </param>
                    <param name="size">1</param>
                </params>
            </validationFunction>
        </rule>

        <rule name="SINGLE_OCR-TEXT-DIR_FILE_EXISTS" level="severe">
            <description>Musí existovat nanejvýše jeden soubor (adresář) SINGLE_OCR-TEXT.</description>
            <validationFunction name="CHECK_LIST_EXACT_SIZE">
                <params>
                    <param name="list">
                        <variable name="OCR-TEXT_FILES"/>
                    </param>
                    <param name="size">1</param>
                </params>
            </validationFunction>
        </rule>

        <rule name="SINGLE_OCR-ALTO-DIR_FILE_EXISTS" level="severe">
            <description>Musí existovat nanejvýše jeden soubor (adresář) OCR-ALTO-DIR.</description>
            <validationFunction name="CHECK_LIST_EXACT_SIZE">
                <params>
                    <param name="list">
                        <variable name="OCR-ALTO-DIR_FILES"/>
                    </param>
                    <param name="size">1</param>
                </params>
            </validationFunction>
        </rule>

        <rule name="SINGLE_MASTER-COPY-DIR_FILE_EXISTS" level="severe">
            <description>Musí existovat nanejvýše jeden soubor (adresář) MASTER-COPY-DIR.</description>
            <validationFunction name="CHECK_LIST_EXACT_SIZE">
                <params>
                    <param name="list">
                        <variable name="MASTER-COPY-DIR_FILES"/>
                    </param>
                    <param name="size">1</param>
                </params>
            </validationFunction>
        </rule>

        <rule name="SINGLE_USER-COPY-DIR_FILE_EXISTS" level="severe">
            <description>Musí existovat nanejvýše jeden soubor (adresář) USER-COPY-DIR.</description>
            <validationFunction name="CHECK_LIST_EXACT_SIZE">
                <params>
                    <param name="list">
                        <variable name="USER-COPY-DIR_FILES"/>
                    </param>
                    <param name="size">1</param>
                </params>
            </validationFunction>
        </rule>


        <!--názvy top-level adresářů obsahují povolené znaky-->

        <rule name="SECONDARY-METS-DIR_FILENAME_VALID" level="severe">
            <description>Název adresáře SECONDARY-METS-DIR musí obsahovat jen povolené znaky.</description>
            <validationFunction name="CHECK_FILENAME_MATCHES_PATTERN">
                <params>
                    <param name="file">
                        <variable name="SECONDARY-METS-DIR_FILE"/>
